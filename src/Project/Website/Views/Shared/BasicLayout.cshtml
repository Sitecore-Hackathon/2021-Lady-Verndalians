<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>

    <!-- jQuery Modal -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.css" />
</head>
<body>
    <div id="header">
        @Html.Sitecore().Placeholder("BodyTop")
    </div>
    <div id="page">
        @Html.Sitecore().Placeholder("Rows")
    </div>
    <div id="footer">
        @Html.Sitecore().Placeholder("Footer")
    </div>

    <!-- Modal HTML embedded directly into document -->
    <div id="ex1" class="modal">
        <h2>Humanize Project</h2>
        <form id="Form1" method="post">
            <div id="hideshow">
            <p>Vote for image tags:</p>
            <ul>
            </ul>
            <p>OR</p>
            </div>
            <label for="manual-entry">Enter your choice</label>
            <input type="text" name="manual-entry" id="manual-entry" /> 
            <button id="submit-tag-choice">Submit</button>
        </form>
        <a href="#" rel="modal:close">Close</a>
    </div>
</body>
</html>
